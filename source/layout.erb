<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Troutwine -- Blog</title>
  <meta name="description" content="This is the blog of Brian L. Troutwine.">
  <meta name="author" content="Brian L. Troutwine">

  <meta name="viewport" content="width=device-width,initial-scale=1">

  <link href='http://fonts.googleapis.com/css?family=Mate+SC' rel='dns-prefetch stylesheet' type='text/css'>
  <link rel="stylesheet" href="/stylesheets/base.css">
</head>

<body>

  <div id="container">
    <%= partial "header" %>
    <div id="main">
      <div id="content">
      <% if is_blog_article? %>
        <% content_for :blog_article, yield %>
        <%= partial settings.blog_article_template %>
      <% else %>
        <%= yield %>
      <% end %>
      </div>
      <%= partial "aside" %>
    </div>
    <%= partial "footer" %>
  </div> <!--! end of #container -->
</body>
</html>
